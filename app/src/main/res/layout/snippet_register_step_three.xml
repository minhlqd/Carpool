<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundRelativeLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/relLayout1">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/registrationPicture"
                    android:src="@drawable/ic_change_picture"
                    android:layout_centerHorizontal="true"/>


                <!-- Full name layout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/registrationPicture"
                    android:id="@+id/fullnameLayout">
                    <EditText
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/ic_fullname"
                        android:drawablePadding="10dp"
                        android:padding="8dp"
                        android:width="400dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/fullnameStepThreeEditText"
                        android:hint="@string/full_name" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fullnameLayout"
                    android:id="@+id/dobLayout">
                    <EditText
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_dob"
                        android:drawablePadding="10dp"
                        android:padding="8dp"
                        android:width="400dp"
                        android:focusable="false"
                        android:background="@null"
                        android:inputType="textNoSuggestions"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/dobStepThreeEditText"
                        android:hint="@string/date_of_birth" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Mobile number layout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dobLayout"
                    android:id="@+id/usernameLayout">
                    <EditText
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="10dp"
                        android:padding="8dp"
                        android:width="400dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/mobileStepThreeEditText"
                        android:hint="@string/mobile_number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mobile number layout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameLayout"
                    android:id="@+id/workLayout">
                    <EditText
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/ic_work"
                        android:drawableTint="#838383"
                        android:drawablePadding="10dp"
                        android:padding="8dp"
                        android:width="400dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/workEditTextStepThree"
                        android:hint="@string/work_place" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mobile number layout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workLayout"
                    android:id="@+id/educationLayout">
                    <EditText
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/ic_education"
                        android:drawableTint="#838383"
                        android:drawablePadding="10dp"
                        android:padding="8dp"
                        android:width="400dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/educationEditTextStepThree"
                        android:hint="@string/education" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mobile number layout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/educationLayout"
                    android:id="@+id/bioLayout">
                    <EditText
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/ic_bio"
                        android:drawableTint="#838383"
                        android:drawablePadding="10dp"
                        android:padding="8dp"
                        android:width="400dp"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/bioEditTextStepThree"
                        android:hint="@string/tell_us_abit_about_yourself" />
                </com.google.android.material.textfield.TextInputLayout>



                <!-- Gender layout -->
                <RadioGroup
                    android:checkedButton="@+id/offerButton"
                    android:id="@+id/genderToggle"
                    android:layout_width="match_parent"
                   android:layout_margin="15dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/bioLayout"
                    android:background="@drawable/green_out_line"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginStart="1dp"
                        android:id="@+id/femaleButton"
                        android:background="@drawable/toggle_widget_green_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/female"
                        android:textColor="@color/dark_grey" />

                    <RadioButton
                        android:layout_marginEnd="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/maleButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_green_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/male"
                        android:textColor="@color/dark_grey" />
                </RadioGroup>


                <Button
                    android:id="@+id/nextBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/genderToggle"
                    android:layout_below="@id/genderToggle"
                    android:layout_marginBottom="23.5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/madeleina"
                    android:text="@string/next"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
    </RelativeLayout>
</merge>