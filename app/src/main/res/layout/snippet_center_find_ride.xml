<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_background"
            android:paddingTop="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <!-- Username edit text field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_marginTop="30dp"
                android:id="@+id/relLayout1">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/mainLayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/from"
                            android:id="@+id/fromTextView"
                            android:paddingTop="10dp"
                            android:paddingStart="15dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/blue" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/fromLinearLayout"
                            android:layout_below="@id/fromTextView"
                            android:layout_height="40dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_location"
                                android:backgroundTint="@color/blue"
                                android:layout_marginStart="14dp"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/fromEditText"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="15sp"
                                android:textColor="@color/blue"
                                android:editable="false"
                                android:backgroundTint="@color/blue"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/destination"
                            android:id="@+id/destinationTextView"
                            android:layout_below="@id/fromLinearLayout"
                            android:paddingTop="10dp"
                            android:paddingStart="15dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/blue" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/destinationLinearLayout"
                            android:layout_below="@id/destinationTextView"
                            android:layout_height="40dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_location"
                                android:backgroundTint="@color/blue"
                                android:layout_marginStart="14dp"/>

                            <EditText
                                android:id="@+id/destinationEditText"
                                android:layout_width="322dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:backgroundTint="@color/blue"
                                android:textColor="@color/blue"
                                android:editable="false"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/date_of_journey"
                            android:layout_below="@id/destinationLinearLayout"
                            android:id="@+id/timeTextView"
                            android:paddingTop="10dp"
                            android:paddingStart="15dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/blue" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/dateLinearLayout"
                            android:layout_below="@id/timeTextView"
                            android:layout_height="40dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_date"
                                android:backgroundTint="@color/blue"
                                android:layout_marginStart="14dp"/>

                            <EditText
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="true"
                                android:textSize="15sp"
                                android:textColor="@color/blue"
                                android:backgroundTint="@color/blue" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/length_of_journey"
                            android:id="@+id/lengthTextView"
                            android:paddingTop="10dp"
                            android:paddingStart="15dp"
                            android:layout_below="@id/dateLinearLayout"


                            android:paddingBottom="10dp"
                            android:textColor="@color/blue" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/legnthLinearLayout"
                            android:layout_below="@id/lengthTextView"
                            android:layout_height="40dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_clock"
                                android:backgroundTint="@color/blue"
                                android:layout_marginStart="14dp"/>

                            <EditText
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="15sp"
                                android:inputType="number"
                                android:textColor="@color/blue"
                                android:backgroundTint="@color/blue" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/seats_available"
                            android:id="@+id/seatsTextView"
                            android:paddingTop="10dp"
                            android:paddingStart="15dp"
                            android:layout_below="@id/legnthLinearLayout"
                            android:paddingBottom="10dp"
                            android:textColor="@color/blue" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/seatsLinearLayout"
                            android:layout_below="@id/seatsTextView"
                            android:layout_height="40dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_seats"
                                android:backgroundTint="@color/blue"
                                android:layout_marginStart="14dp"/>

                            <EditText
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="15sp"
                                android:inputType="number"
                                android:textColor="@color/blue"
                                android:backgroundTint="@color/blue" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/registration_plate"
                            android:id="@+id/registrationTextView"
                            android:paddingTop="10dp"
                            android:paddingStart="15dp"
                            android:layout_below="@id/seatsLinearLayout"
                            android:paddingBottom="10dp"
                            android:textColor="@color/blue" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/regLinearLayout"
                            android:layout_below="@id/registrationTextView"
                            android:layout_height="40dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_car"
                                android:backgroundTint="@color/blue"
                                android:layout_marginStart="14dp"/>

                            <EditText
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/gl06_zfa"
                                android:textSize="15sp"
                                android:textColor="@color/blue"
                                android:backgroundTint="@color/blue" />
                        </LinearLayout>



                        <Button
                            android:id="@+id/snippetOfferRideButton"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/regLinearLayout"
                            android:text="@string/offer_ride"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/blue"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</merge>