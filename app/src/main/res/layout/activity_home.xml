<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity">
    <include layout="@layout/layout_center_viewpager"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/homeRelativeLayout"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainRelativeLayout"
            android:layout_marginBottom="50dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MapsActivity" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/toggle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/pink_out_line"
                    android:checkedButton="@+id/findButton"
                    android:orientation="horizontal">

                    <RadioButton
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:id="@+id/findButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/find_a_ride"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/offerButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/offer_ride"
                        android:textColor="@color/background_icon" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    card_view:cardElevation="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="103dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/locationLayout">

                        <ImageView
                            android:id="@+id/locationImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_gps" />

                        <AutoCompleteTextView
                            android:id="@+id/location"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/locationImage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="14dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_light"
                            android:hint="@string/location"
                            android:imeOptions="actionSearch"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textSize="20sp"
                            tools:ignore="RtlSymmetry" />

                        <Button
                            android:layout_width="20dp"
                            android:id="@+id/switchTextBtn"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_switch"
                            android:layout_alignParentEnd="true"
                            android:backgroundTint="@color/grey"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="15dp"
                            android:layout_gravity="center_horizontal"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp">
                        <ImageView
                            android:id="@+id/destinationImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"/>

                        <AutoCompleteTextView
                            android:id="@+id/destination"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/destinationImageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="14dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_light"
                            android:hint="@string/destination"
                            android:imeOptions="actionSearch"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textSize="20sp" />

                        <Button
                        android:background="@drawable/ic_chevron_right_black_24dp"
                        android:id="@+id/searchBtn"
                        android:layout_width="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_height="35dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="8dp"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_directions"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="100dp"
                    android:id="@+id/directionsBtn"/>
            </LinearLayout>
            

        </RelativeLayout>

        <include layout="@layout/layout_bottom_navigation_view"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>