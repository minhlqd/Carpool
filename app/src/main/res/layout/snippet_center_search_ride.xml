<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profile_change"
                android:layout_centerHorizontal="true"
                android:src="@drawable/find_a_ride" />


            <!-- Username edit text field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/profile_change"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_border_bottom"
                android:id="@+id/relLayout1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/current_location"
                    android:focusable="false"
                    android:id="@+id/locationEditText"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"/>
            </RelativeLayout>

            <!-- Fullname edit text field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout1"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_border_bottom"
                android:id="@+id/relLayout2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_destination"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/destinationEditText"
                    android:hint="Destination"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"/>
            </RelativeLayout>


            <!-- Date of birth edit text field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout2"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_border_bottom"
                android:id="@+id/relLayout4">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_dob"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:id="@+id/dateEditText"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:focusable="false"
                    android:background="@null"
                    android:inputType="textNoSuggestions"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/relLayout4"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_border_bottom"
            android:id="@+id/relLayout5">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gender"
                android:layout_centerVertical="true"/>

            <Switch
                android:id="@+id/sameGenderSearchSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingStart="40dp"
                android:paddingTop="13dp"
                android:text="@string/same_gender"
                android:textSize="17sp"
                android:textColor="#A2A2A2"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

            <Button
                android:id="@+id/snippetSeachARideBtn"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout5"
                android:text="@string/find_a_ride"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/dark_grey"/>

        </RelativeLayout>
    </ScrollView>
</merge>