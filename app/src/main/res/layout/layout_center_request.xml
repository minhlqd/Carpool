<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/requestProfilePhoto"
                android:padding="2dp"
                app:civ_border_color="@color/light_grey"
                app:civ_border_width="2dp"
                android:src="@drawable/dr_expresso" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/requestProfilePhoto"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="32dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:id="@+id/message"
                        android:gravity="center"
                        android:text="@string/hi_i_m_username_and_would_like_to_request_a_seat_on_your_journey" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/light_grey"
                        android:layout_marginRight="32dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16sp"
                            android:id="@+id/from"
                            android:gravity="center"
                            android:text="@string/from_hanoi_vn" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="32dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/light_grey"
                        android:layout_marginRight="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="16sp"
                            android:id="@+id/to"
                            android:gravity="center"
                            android:text="@string/to_nam_dinh_vn" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="35dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:id="@+id/seats"
                        android:gravity="center"
                        android:text="@string/seats_required_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="32dp"
                        android:textSize="16sp"
                        android:layout_marginRight="32dp"
                        android:id="@+id/luggage"
                        android:gravity="center"
                        android:text="@string/luggage_required_1kg" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="30dp"
                        android:gravity="bottom">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/confirmRideBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="16dp"
                            android:src="@drawable/ic_check"
                            app:backgroundTint="@color/theme" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/declineRideBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:elevation="16dp"
                            android:src="@drawable/ic_close"
                            app:backgroundTint="@android:color/holo_red_dark" />

                    </RelativeLayout>


                </LinearLayout>
    </RelativeLayout>


</merge>